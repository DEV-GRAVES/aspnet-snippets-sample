@model string

@{
  ViewData["Title"] = "New folder";
}

<div class="card">
  <div class="card-body">
    <h1 class="card-title">New folder</h1>
    <form asp-action="NewFolder">
      <input type="hidden" name="folderId" value="@Model">
      <input type="text" class="form-control" name="newFolderName" placeholder="New folder name" required>
      <div class="mt-3">
        <input type="submit" class="btn btn-primary" value="Create">
        <a asp-action="Index" asp-route-folderId="@Model" class="btn btn-secondary">Cancel</a>
      </div>
    </form>
    </div>
</div>
