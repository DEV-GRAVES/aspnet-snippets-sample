@model string

@{
  ViewData["Title"] = "Upload file";
}

<div class="card">
  <div class="card-body">
    <h1 class="card-title">Upload file</h1>
    <form asp-action="UploadFile" enctype="multipart/form-data">
      <input type="hidden" name="folderId" value="@Model">
      <div class="form-group">
        <div class="custom-file">
          <input type="file" class="custom-file-input" name="uploadFiles" id="uploadFiles" required>
          <label for="uploadFiles" class="custom-file-label">Choose file</label>
        </div>
      </div>
      <div class="mt-3">
        <input type="submit" class="btn btn-primary" value="Upload">
        <a asp-action="Index" asp-route-folderId="@Model" class="btn btn-secondary">Cancel</a>
      </div>
    </form>
    </div>
</div>

@section Scripts
{
    <script src="https://cdn.jsdelivr.net/npm/bs-custom-file-input/dist/bs-custom-file-input.min.js"></script>
    <script>
      // Initialize Bootstrap custom file input
      $(document).ready(function () {
          bsCustomFileInput.init();
      });
    </script>
}